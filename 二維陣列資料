echo "<table border='1'>";
echo "<tr><td>號碼</td><td>書名</td><td>集數</td><td>類型</td><td>可借閱數</td></te>";
	for ($i=0 ; $i < count($ar) ; $i++) {
		echo "<tr>";
				echo "<td>".$ar[$i]['號碼']."</td>";
