	array('號碼'=>'6' ,'書名'=> 'Ga' ,'集數'=> '006' ,'類型'=> '教育' ,'可借閱數'=> '10'),
	array('號碼'=>'7' ,'書名'=> 'Ha' ,'集數'=> '007' ,'類型'=> '農業' ,'可借閱數'=> '10'),
	array('號碼'=>'8' ,'書名'=> 'Ia' ,'集數'=> '008' ,'類型'=> '地理' ,'可借閱數'=> '10'),
	array('號碼'=>'9' ,'書名'=> 'Ja' ,'集數'=> '009' ,'類型'=> '化學' ,'可借閱數'=> '10'),
	array('號碼'=>'10' ,'書名'=> 'Ka' ,'集數'=> '010' ,'類型'=> '土木' ,'可借閱數'=> '10'),
);

